{
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "icon_theme": "Material Icon Theme",
  "on_last_window_closed": "quit_app",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "performance": {
    "show_in_status_bar": true
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "ollama",
      "model": "deepseek-r1:8b"
    }
  },
  "file_scan_exclusions": [
    ".git",
    ".idea",
    ".DS_Store",
    ".vscode",
    "benchmark",
    "docs",
    "hack",
    //"script",
    "lrd",
    "data_migration",
    "rocksdb",
    "zoro"
  ],
  "ui_font_weight": 500,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    },
    "hunk_style": "staged_hollow"
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "show_call_status_icon": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": false
    },
    "update_with_cursor": false,
    "primary_only": false,
    "use_rendered": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "line_indicator_format": "short",
  "active_pane_magnification": 1.0,
  "theme": "Ayu Light",
  // "ui_font_family": "FiraCode Nerd Font Mono",
  "ui_font_size": 16,
  "buffer_font_family": "FiraCode Nerd Font Mono", //"Zed Mono",
  "buffer_font_features": {
    "calt": true,
    "zero": true
  },
  "buffer_font_size": 18,
  "default_dock_anchor": "right",
  "hover_popover_enabled": true,
  "preferred_line_length": 99,
  "vim_mode": true,
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "show_completions_on_input": true,
  "terminal": {
    "alternate_scroll": "off",
    "copy_on_select": true
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path": "/Users/x/.cargo/bin/rust-analyzer"
      },
      "cargo": {
        "buildScripts": {
          "enable": true
        }
      },
      "procMacro": {
        "enable": true,
        "ignored": [
          // optional:
          // "component",
          "server"
        ]
      },
      "initialization_options": {
        "inlayHints": {
          "maxLength": 99
        },
        "lifetimeElisionHints": {
          "useParameterNames": true,
          "enable": "skip_trivial"
        },
        "closureReturnTypeHints": {
          "enable": "always"
        },
        "check": {
          "command": "clippy" // rust-analyzer.checkOnSave.command
        }
      }
    },
    "gopls": {
      "binary": {
        "path": "/Users/x/.gobin/gopls"
      },
      "initialization_options": {
        "hints": {
          "assignVariableTypes": false,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": false,
          "rangeVariableTypes": true
        }
      }
    }
  },
  "languages": {
    "Rust": {
      "show_edit_predictions": true
    },
    "Go": {
      "show_edit_predictions": true
    },
    "Python": {
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["ruff"]
    }
  }
}
